<Application x:Class="GUI_Group_Project.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GUI_Group_Project"
             StartupUri="Welcome.xaml">
    <Application.Resources>
        <Style x:Key="buttonCurve" TargetType="Button">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontFamily" Value="Sitka Small"/>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>

        </Style>
        <Style x:Key="buttonCurve1" TargetType="Button">
            <Setter Property="BorderBrush" Value="Navy"/>
            <Setter Property="Background" Value="#add8e6"/>
            <Setter Property="Foreground" Value="Navy"/>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>

        </Style>
         
    </Application.Resources>
</Application>
