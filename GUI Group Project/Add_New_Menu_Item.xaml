<Window x:Class="GUI_Group_Project.Add_New_Menu_Item"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_Group_Project"
        mc:Ignorable="d"
        Title="Add_New_Menu_Item" Height="450" Width="800" ResizeMode="CanMinimize" WindowState="Maximized">
    <Grid>
        <Image Source="images/addmenu.jpg" Stretch="Fill" Opacity=".8"></Image>
        <StackPanel HorizontalAlignment="Center">
            <Label Content="New Menu Item" HorizontalAlignment="Left" Foreground="White"></Label>
        </StackPanel>
        <StackPanel>
            <DockPanel>
                <Label></Label>
                <TextBox></TextBox>
            </DockPanel>
        </StackPanel>
        
    </Grid>
</Window>
